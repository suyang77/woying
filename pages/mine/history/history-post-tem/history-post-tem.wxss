.post-container {
  flex-direction: column;
  display: flex;
  margin-bottom: 10rpx;
  margin-left: 0rpx;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
  background-color: #fbfbfb;
}

.post-date {
  font-size: 26rpx;
  margin-left: 40rpx;
  margin-bottom: 10px;
  vertical-align: middle;
}

.superfather{
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: center
}

.father{
  width: 88%;
  display: flex;
  flex-direction: column;
}

.post-die {
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 600;
  width: 100%;
  color: #333;
}

.post-title {
  margin-top: 20rpx;
  font-size: 34rpx;
  height: 60rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.post-die2 {
  text-align: center;
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
  width: 20%;
  height: 60rpx;
}

.post-content {
  text-align: center;
  color: #666;
  width: 100%;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-image {
  margin-left: 10rpx;
  width: 100%;
  height: 20rpx;
}


.post-xiangqing {
  margin-top: 60rpx;
  justify-content: center;
  height: 100%;
  margin-right: 5rpx;
  font-size: 28rpx;
}

.post-dingdan {
  justify-content: center;
  display: flex;
  flex-direction: row;
}
