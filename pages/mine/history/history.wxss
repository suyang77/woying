/* pages/mine/history/history.wxss */
@import "history-post-tem/history-post-tem.wxss";

.calendar_text{
  font-size: 36rpx;
  padding-top: 300rpx;
  font-weight: bold;
  letter-spacing:2rpx;
}

.calendar{
  margin: 20rpx 0 20rpx 30rpx; 
}

/* 详情框的样式 */
.detail{
  position:absolute;
  top: 150rpx;
  right: 75rpx;
  display: flex;
  flex-direction: column;
  width: 600rpx;
  height: 700rpx;
  margin: 0 auto;
  border: solid 2rpx #ccc;
  background-color: #f5f5f5;
}

.detail_title{
  border-bottom: solid 2rpx #ccc;
  text-align: center;
  line-height: 52rpx
}


.order_num{
margin-top: 30rpx;
margin-left: 30rpx;
font-weight: bold;
}

.order_num text{
  font-size: 36rpx;
}

.detail_entry{
  margin-top: 40rpx;
  font-size: 28rpx;
  line-height: 70rpx;
  display: flex;
  flex-direction: column;
  margin-left: 50rpx;
  color: #333333
}

.back{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 400rpx;
}
